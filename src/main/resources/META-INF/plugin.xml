<idea-plugin>
    <id>com.github.derdan.openinassociatedapplication</id>
    <name>OpenInAssociatedApplication</name>
    <vendor>derdan</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <actions>
        <action id="com.github.derdan.openinassociatedapplication.OpenInAssociatedApplicationAction"
                class="com.github.derdan.openinassociatedapplication.OpenInAssociatedApplicationAction"
                text="Associated Application"
                description="Open the selected file(s) in the associated application">
            <add-to-group group-id="RevealGroup" anchor="last"/>
            <keyboard-shortcut  first-keystroke="alt a" keymap="$default"/>
        </action>
    </actions>
</idea-plugin>
